
@{
    ViewBag.Title = "RegisterSeller";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/assets/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/global/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css" />

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Add Seller</h3>
    </div>

    <div class="box-body">
        @using (Html.BeginForm("RegisterSeller", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="form-body">

                @*<div class="form-group">
                    <label class="col-md-3 control-label">Type</label>
                    <div class="col-md-6">
                        <select class="form-control select2" name="RoleType">
                            <option value="0">Select Type</option>
                            <option value="1">Admin</option>
                            <option value="3">Seller</option>

                        </select>
                    </div>
                </div>
                <br />
                <br />*@
                <div class="form-group">
                    <label class="col-md-3 control-label">Brand Name</label>
                    <div class="col-md-6">
                        <select class="select2 form-control" name="BrandId">
                            <option value="0">Select Brand</option>
                            @if (ViewBag.BrandList != null)
                            {
                                foreach (var item in ViewBag.BrandList)
                                {
                                    string isSelected = string.Empty;
                                    //if (item.ID == Model.BrandId)
                                    //{
                                    //    isSelected = "selected";
                                    //}
                                <option value="@item.ID">@item.Name</option>
                                    }
                                }


                        </select>
                    </div>
                </div>
                <br />
                <br /><br />
                <div class="form-group">
                    <label class="col-md-3 control-label">Name</label>
                    <div class="col-md-6">
                        <input type="text" name="Name" class="form-control" placeholder="Enter text">
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label class="col-md-3 control-label">Phone</label>
                    <div class="col-md-6">
                        <input type="text" name="Phone" class="form-control" placeholder="Enter text">
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label class="col-md-3 control-label">Email Address</label>
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            <input type="email" name="email" class="form-control" placeholder="Email Address">
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label class="col-md-3 control-label">Password</label>
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="password" name="Password" class="form-control" placeholder="Password">
                            <span class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <br />
                <br />

                <div class="form-group">
                    <label class="col-md-3 control-label">Latitude</label>
                    <div class="col-md-6">

                        <input type="text" name="Latitude" class="form-control" placeholder="Longitude">

                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label class="col-md-3 control-label">Longitude</label>
                    <div class="col-md-6">


                        <input type="text" name="Longitude" class="form-control" placeholder="Longitude">

                    </div>
                </div>

                <br />
                <br />
                <div class="form-group">
                    <label class="col-md-3 control-label">Image Upload</label>
                    <div class="col-md-6">


                        <input type="file" class="form-control" name="Files" />

                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label class="col-md-3 control-label">Address</label>
                    <div class="col-md-6">


                        <textarea class="form-control" name="Address" placeholder="Address"></textarea>

                    </div>
                </div>
                <br />
                <br />
            </div>
            <br />
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-4">
                            <button type="submit" class="btn btn-primary btn-flat">Submit</button>
                            <button type="button" class="btn btn-danger btn-flat">Cancel</button>
                        </div>
                    </div>
                </div>
        }
        <!-- END FORM-->
    </div>
</div>

<script src="~/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
<script src="~/assets/pages/scripts/components-select2.min.js" type="text/javascript"></script>
