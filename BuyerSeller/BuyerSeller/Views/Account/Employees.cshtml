

@model IEnumerable<BuyerSeller.Models.User>
@{
    ViewBag.Title = "Sellers";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Add Buyer</h3>
    </div>
    <div class="box-body">

        <table class="table table-bordered table-striped table-condensed flip-content">
            <thead class="flip-content">
                <tr>

                    <td>@Html.DisplayName("Image")</td>

                    <td>@Html.DisplayName("Name")</td>
                    <td>@Html.DisplayName("Email")</td>
                    <td>@Html.DisplayName("Phone")</td>
                    @*<td>@Html.DisplayName("Latitude")</td>
                        <td>@Html.DisplayName("Longitude")</td>*@
                    <td>@Html.DisplayName("Address")</td>
                    <td>@Html.DisplayName("Role")</td>
                    <td>@Html.DisplayName("Action")</td>




                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @{
                                string base64Product = string.Empty;
                                string ProductImage = string.Empty;
                                if (item.ImageUpload != null)
                                {
                                    base64Product = Convert.ToBase64String(item.ImageUpload);
                                    ProductImage = string.Format("data:image/jpg;base64,{0}", base64Product);
                                }

                            }
                            <img src='@ProductImage' height="75" width="75" />

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.EmailID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MobileNo)
                        </td>



                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.Name)
                        </td>
                        <td>
                            <button class="btn btn-success" onclick="location.href='@Url.Action("ManageRole","Account",new { userid=@item.ID})'">Manage Role</button>
                        </td>
                    </tr>
 }

        </table>
    </div>
</div>
