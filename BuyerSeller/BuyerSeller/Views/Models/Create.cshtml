@model  BuyerSeller.Models.Model

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}


<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@GetValueByKey("Model")</h3>
    </div>
    <div class="box-body">
        <div class="container">
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.Label(@GetValueByKey("Brand"), htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(Model => Model.BrandID, ViewBag.Brands as IEnumerable<SelectListItem>, @GetValueByKey("SelectBrand"), new { @class = "form-control select2" })
                            </div>
                        </div>
                        <br /><br />

                        <div class="form-group">
                            @Html.Label(@GetValueByKey("Name"), htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <br />
                    </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-4">
                                        <button type="submit" class="btn btn-primary">@GetValueByKey("Submit")</button>
                                        <button type="submit" onclick="location.href='@Url.Action("Index","Categories")'" class="btn btn-danger">@GetValueByKey("Cancel")</button>
                                    </div>
                                </div>
                            </div>
                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                }

            </div>
        </div>
    </div>
</div>




