@model IEnumerable<BuyerSeller.Models.Order>
@{
    ViewBag.Title = "RequestedOrders";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/Theme/css/theme-elements.css" rel="stylesheet" />
<style>
        .borderradius {
            box-shadow: -2px 6px 5px 0px #ccc;
        }
        .customdiv{

            color:#428bca;
            background-color:#f9f9f9;
            font-family:ProximaNovaRegular,'Source Sans Pro',Helvetica,Arial,sans-serif;
            font-weight:100;
            text-align:center;
            padding-bottom:15px;
             padding-top:15px;
            max-width:300px;
            margin:10px;
        }
    </style>
 

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Buyer Posted Request</h3>
    </div>
    <div class="box-body">        
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    @foreach (var item in Model)
            {
                        <div class="col-md-4 customdiv borderradius">
                            <h4>Order # @item.ID |Brand Name: @item.Brand.Name </h4>  <h4>Model:@item.Model.Name </h4>
                            <h5>Qty: @item.Qty  | Part Name: @item.PartName</h5>
                            <hr />
                            <a href="@Url.Action("Sellers","Home",new { id=item.ID})" class="btn btn-success btn-flat" style="text-align:center;">View Details</a>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>