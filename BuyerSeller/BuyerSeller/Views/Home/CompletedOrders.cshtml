@model BuyerSeller.Models.OrderDetail
@{
    ViewBag.Title = "CompletedOrders";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}

 
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Completed Orders</h3>
    </div>
    <div class="box-body">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th>S.No</th>
                                <th>Image</th>
                                <th>Part Name</th>
                                <th>Qty</th>
                                <th>Price</th>
                                <th>Total Price</th>
                                <th>User Name</th>
                                <th>Mobile</th>

                                <th>Address</th>

                                <th>Rating</th>

                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in ViewBag.CompletedOrders)
            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td><img src="~/ProductImages/@item.Image" height="100" width="100"></td>
                                    <td>@item.Order.PartName</td>
                                    <td>@item.Order.Qty</td>
                                    <td>@item.Price</td>
                                    <td>@item.TotalPrice</td>
                                    <td>@item.User.Name</td>
                                    <td>@item.User.MobileNo</td>
                                    <td>@item.User.Address</td>

                                    <td>
                                        <button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("ReviewSeller","Home",new {SellerId= @item.SellerID})'">Rate Now</button>
                                    </td>

                                </tr>
                                @*<div class="media">
                                    <div class="media-left">
                                        <img src="~/ProductImages/@item.Image" class="media-object" style="width:60px">
                                    </div>
                                    <div class="media-body">
                                        <h4 class="media-heading">@item.Order.PartName</h4>
                                        <h4 class="media-heading">@item.Order.Qty</h4>
                                        <h4 class="media-heading">@item.Price</h4>
                                        <h4 class="media-heading">@item.TotalPrice</h4>
                                        <p>@item.User.Name</p>
                                        <p>@item.User.MobileNo</p>
                                        <p>@item.User.Address</p>
                                    </div>
                                    <a href="@Url.Action("CompleteOrder", "Home", new { id = item.ID })">Select Seller</a>
                                </div>*@

            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
</div>
</div>