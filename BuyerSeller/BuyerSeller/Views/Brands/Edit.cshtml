@model BuyerSeller.Models.Brand

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Add Brand</h3>
        </div>
        <div class="box-body">
 
                <div class="form-group">
                    @Html.Label("Country", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @*<select class="form-control" name="CountryId">
                                <option value="0">Select Country</option>
                                @if (ViewBag.CountryList != null)
                                {

                                    foreach (var item in ViewBag.CountryList)
                                    {

                                        string isSelected = string.Empty;
                                        if (item.Id == Model.CountryId)
                                        {
                                            isSelected = "selected";
                                        }
                                        <option @isSelected value="@item.Id">@item.Name</option>

                                    }
                                }
                            </select>*@
                        @Html.DropDownListFor(Model => Model.CountryId, ViewBag.CountryList as IEnumerable<SelectListItem>, "Select Country", new { @class = "form-control select2" })
                    </div>
                </div>
           
            <br />
            <br />
            <div class="form-group">
                <label class="col-md-3 control-label">Name</label>
                <div class="col-md-6">
                    <input type="text" value="@Model.Name" name="Name" class="form-control" placeholder="Enter text">
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <label class="col-md-3 control-label">Date</label>
                <div class="col-md-6">
                    <input type="date" value="@Model.CreatedOn" name="CreatedOn" class="form-control">
                </div>
            </div>
            <br /><br />
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-4">
                        <button type="submit" class="btn  btn-primary">Submit</button>
                        <button type="submit" onclick="location.href='@Url.Action("Index","Brands")'" class="btn btn-danger">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



