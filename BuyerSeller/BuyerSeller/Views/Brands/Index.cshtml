@model IEnumerable<BuyerSeller.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
 
 
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@GetValueByKey("ViewAllBrands")</h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-responsive table-hover">

            <thead class="flip-content">
                <tr>
                   
                    <td>@GetValueByKey("Name")</td>
                    <td>@GetValueByKey("Country")</td>
                    <td>@GetValueByKey("CreatedOn")</td>
                    <td>@GetValueByKey("CreatedBy")</td>
                  
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
 
 