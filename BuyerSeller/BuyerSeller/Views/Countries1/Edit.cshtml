@model BuyerSeller.Models.Brand


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="box box-primary">
        <div class="box-header with-border">
        
            <h3 class="box-title">@GetValueByKey("AddBrands")</h3>
        </div>
        <div class="box-body">
            <div class="form-body">

                <div class="form-group">
                    <label class="col-md-3 control-label">@GetValueByKey("Name")</label>
                    <div class="col-md-6">
                        <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="@GetValueByKey("EnterText")">
                    </div>
                </div>

            </div>
            <div class="form-body">

                <div class="form-group">
                    <label class="col-md-3 control-label">@GetValueByKey("Date")</label>
                    <div class="col-md-6">
                        <input type="date" name="CreatedDate" value="@Model.CreatedOn" class="form-control" placeholder="@GetValueByKey("Date")">
                    </div>
                </div>

            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-4">
                        <button type="submit" class="btn green">@GetValueByKey("Submit")</button>
                        <button type="submit" onclick="location.href='@Url.Action("Index","Categories")'" class="btn default">@GetValueByKey("Cancel")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>



     

}