@model BuyerSeller.Models.Country

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using BOLHelpers.Enums;

 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Add Country</h3>
        </div>
        <div class="box-body">

            <div class="form-body">

                <div class="form-group">
                    <label class="col-md-3 control-label">@GetValueByKey("Name")</label>
                    <div class="col-md-6">
                        <input type="text" name="Name" class="form-control" placeholder="Enter text">
                    </div>
                </div>

            </div>
            <br /><br />
            <div class="form-body">

                <div class="form-group">
                    <label class="col-md-3 control-label">@GetValueByKey("Date")</label>
                    <div class="col-md-6">
                        <input type="date" name="CreatedDate" class="form-control" placeholder="Enter text">
                    </div>
                </div>

            </div>
            <br /><br />
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-4">
                        <button type="submit" class="btn green">Submit</button>
                        <button type="submit" onclick="location.href='@Url.Action("Index","Categories")'" class="btn default">Cancel</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
